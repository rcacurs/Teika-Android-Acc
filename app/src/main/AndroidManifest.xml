<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lv.edi.HeadTilt" >
    <uses-skd
        android:minSdkVersion="18"
        android:targetSdkVersion="20" />
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        ></uses-permission>

    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>

    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="HeadTiltApplication"
        android:allowBackup="true"
        android:icon="@mipmap/nosorelogo_48"
        android:label="No-Sore-Acc"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="lv.edi.BluetoothLib.DeviceListActivity"></activity>
        <activity android:name=".HeadTiltPreferenceActivity"
                  android:label="@string/preferences_label"
            ></activity>
    </application>
</manifest>
